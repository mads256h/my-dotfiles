# general settings
auto-reload yes
max-items 50

# externel browser
browser "$BROWSER --profile-directory=\"$BROWSER_PROFILE_OTHER\" %u"
macro m set browser "mpv %u"; open-in-browser ; set browser "$BROWSER --profile-directory=\"$BROWSER_PROFILE_OTHER\" %u"

# unbind keys
unbind-key ENTER
unbind-key j
unbind-key k
unbind-key J
unbind-key K

# bind keys - vim style
bind-key j down
bind-key k up
bind-key l open
bind-key h quit

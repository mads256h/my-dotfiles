# Please see https://i3wm.org/docs/userguide.html for a complete reference!

set $mod Mod4

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:hack 10

for_window [class=".*"] border pixel 0
smart_gaps on
gaps inner 15
gaps outer 15


# Use wpctl to adjust volume in PipeWire.
set $refresh_media pkill -SIGRTMIN+10 i3blocks
bindsym XF86AudioRaiseVolume exec --no-startup-id wpctl set-volume -l 1.5 @DEFAULT_AUDIO_SINK@ 10%+
bindsym XF86AudioRaiseVolume --release exec --no-startup-id $refresh_media
bindsym XF86AudioLowerVolume exec --no-startup-id wpctl set-volume @DEFAULT_AUDIO_SINK@ 10%-
bindsym XF86AudioLowerVolume --release exec --no-startup-id $refresh_media
bindsym XF86AudioMute exec --no-startup-id wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle
bindsym XF86AudioMute --release exec --no-startup-id $refresh_media
bindsym XF86AudioMicMute exec --no-startup-id wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle
bindsym XF86AudioMicMute --release exec --no-startup-id $refresh_media

# Use playerctl to control media
set $wait_refresh_media sleep 0.5 && pkill -SIGRTMIN+10 i3blocks
set $spotify_previous playerctl -p spotify previous
set $spotify_next playerctl -p spotify next
set $spotify_play_pause playerctl -p spotify play-pause
bindsym XF86AudioPrev exec --no-startup-id $spotify_previous
bindsym XF86AudioPrev --release exec --no-startup-id $wait_refresh_media
bindsym XF86AudioNext exec --no-startup-id $spotify_next
bindsym XF86AudioNext --release exec --no-startup-id $wait_refresh_media
bindsym XF86AudioPlay exec --no-startup-id $spotify_play_pause
bindsym XF86AudioPlay --release exec --no-startup-id $wait_refresh_media

bindsym $mod+Mod1+Left  exec --no-startup-id $spotify_previous
bindsym $mod+Mod1+Left  --release exec --no-startup-id $wait_refresh_media
bindsym $mod+Mod1+Right exec --no-startup-id $spotify_next
bindsym $mod+Mod1+Right --release exec --no-startup-id $wait_refresh_media
bindsym $mod+Mod1+Up    exec --no-startup-id $spotify_play_pause
bindsym $mod+Mod1+Up    --release exec --no-startup-id $wait_refresh_media
bindsym $mod+Mod1+Down  exec --no-startup-id $spotify_play_pause
bindsym $mod+Mod1+Down  --release exec --no-startup-id $wait_refresh_media

# Backlight controls
bindsym XF86MonBrightnessUp   exec --no-startup-id brightnessctl -q set +10%
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl -q set 10%-

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec --no-startup-id st -e tmux
bindsym $mod+Shift+Return exec --no-startup-id st

# start vifm
bindsym $mod+g exec --no-startup-id st -e vifmrun

# start browser
bindsym $mod+w exec --no-startup-id $BROWSER

# start spotify
bindsym $mod+s exec --no-startup-id spotify

# take a screenshot
bindsym $mod+t exec --no-startup-id maim --hidecursor -s ~/annex/Pictures/$(date +%s).png

# Close notification
bindsym $mod+Ctrl+space exec --no-startup-id dunstctl close

# Close all notifications
bindsym $mod+Ctrl+Shift+space exec --no-startup-id dunstctl close-all

# Notification history
bindsym $mod+Ctrl+Shift+h exec --no-startup-id dunstctl history-pop

# Notification context menu
bindsym $mod+Ctrl+Shift+. exec --no-startup-id dunstctl close-all

# kill focused window
bindsym $mod+Shift+q kill

# start dmenu (a program launcher)
bindsym $mod+d exec --no-startup-id dmenu_run

bindsym $mod+l exec --no-startup-id i3lock -i $XDG_DATA_HOME/wallpaper.png -t

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+l move up
bindsym $mod+Shift+semicolon move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# move workspace to monitor
bindsym $mod+Ctrl+j move workspace to output left
bindsym $mod+Ctrl+k move workspace to output down
bindsym $mod+Ctrl+l move workspace to output up
bindsym $mod+Ctrl+semicolon move workspace to output right

# alternatively, you can use the arrow keys:
bindsym $mod+Ctrl+Left move workspace to output left
bindsym $mod+Ctrl+Down move workspace to output down
bindsym $mod+Ctrl+Up move workspace to output up
bindsym $mod+Ctrl+Right move workspace to output right


# split in horizontal orientation
bindsym $mod+h split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent



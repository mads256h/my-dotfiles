#!/bin/sh

sed '/^#/d' "$XDG_CONFIG_HOME/calender/config" | xargs -L 1 -I '{}' sh -c "curl -s '{}' | calcurse -q --import -"


# Remove duplicates
CALCURSE_DIR=${CALCURSE_DIR:-${XDG_DATA_HOME}/calcurse}
NOTES_DIR=${NOTES_DIR:-${CALCURSE_DIR}/notes}
APTS_FILE=${APTS_FILE:-${CALCURSE_DIR}/apts}

awk \
  '
    BEGIN { FPAT = "[^|]+" }
    {
      note=$1
      sub(/.*>/, "", note)
      time=$1
      sub(/>[0-9a-f]{40} $/, "", time)
      message=$2
    }
    {
      event[time,note] = $0
    }
    END {
      for (i in event) {
        print event[i]
      }
    }
  ' \
 ${APTS_FILE} \
 > ${APTS_FILE}.dedupe

mv ${APTS_FILE}.dedupe ${APTS_FILE}

